{
  "name": "credit-card-validator",
  "version": "1.0.0",
  "description": "Credit card number validator with payment system detection",
  "homepage": "https://your-username.github.io/credit-card-validator",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack serve --mode=development --port 9000",
    "start": "webpack serve --mode=development --port 9000",
    "test": "jest tests/",
    "test:e2e": "jest e2e/ --testPathIgnorePatterns=\"\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^29.7.0",
    "css-loader": "^6.8.1",
    "gh-pages": "^6.0.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.0.0",
    "puppeteer": "^24.0.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/e2e/**/*.test.js"
    ]
  },
  "dependencies": {
    "babel-loader": "^10.0.0"
  }
}
